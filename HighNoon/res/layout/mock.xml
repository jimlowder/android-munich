<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/topLL"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <Button
		android:id="@+id/bang"
	    android:layout_width="140px" 
	    android:layout_height="80px" 
	    android:layout_centerHorizontal="true"
	    android:layout_centerVertical="true"
	    android:textSize="40dip"
	    android:background="#ffffffff"
	    android:visibility="invisible"
	    android:text="Bang!!!"/>
	<Button
		android:id="@+id/quit"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentBottom="true"
	    android:text="Quit"
	    />
	<Button
		android:id="@+id/restart"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="Restart"
	    android:layout_toLeftOf="@id/quit"
	    android:visibility="invisible"
	    android:layout_alignParentBottom="true"
	    />

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="60px"
	    android:layout_height="wrap_content"
	    android:gravity="bottom|center_horizontal" android:layout_gravity="center" android:layout_marginTop="100px" android:orientation="vertical" android:background="#FFFF8080">
	<TextView
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:text="Remote"
	    android:textColor="#ff000000"
	    android:textSize="10dip"/>
		
	<Button
		android:id="@+id/remoteGunIntermediate"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="appear"
	    android:textSize="10dip"
	    />
	<Button
		android:id="@+id/remoteGunDown"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="down"
	    android:textSize="10dip"
	    />
	<Button
		android:id="@+id/remoteGunUp"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="aim"
	    android:textSize="10dip"
	    />
	<Button
		android:id="@+id/remoteBang"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="bang"
	    android:textSize="10dip"
	    />
	</LinearLayout>
</RelativeLayout>
